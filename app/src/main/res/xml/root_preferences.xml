<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/recording_header">

        <EditTextPreference
            app:defaultValue="2"
            app:key="vines_per_bay"
            android:inputType="number"
            android:selectAllOnFocus="true"
            app:title="@string/vines_per_bay_setting"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            app:defaultValue="numeric"
            app:key="recording"
            app:title="@string/recording_method"
            app:summaryOn="Numeric"
            app:summaryOff="FPI"/>
        <Preference
            android:title="Label list"
            android:key="label_file"
            android:summary="test"/>
    </PreferenceCategory>

</PreferenceScreen>
